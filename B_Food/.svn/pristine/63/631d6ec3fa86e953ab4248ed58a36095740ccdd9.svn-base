	<link rel="stylesheet" type="text/css" href="css/swiper.min.css"/>
    <script src="js/jquery-3.1.1.min.js"></script>
    <script src="js/jquery.cookie.js"></script>
	<script type="text/javascript">

        if ($.cookie("Bam:IsLogin") != "1") {
            window.location.href = "WxLoginStart.aspx";
        }

        function setFontSize(){
            document.documentElement.style.fontSize=window.innerWidth/37.5+'px';
        }
        setFontSize();
        window.addEventListener('resize',function(){
            setFontSize();
        });

        $(function () {
            $("#UserHeadImg").attr("src", $.cookie('Bam:UserHeadImg'));
            ("#UserId").html( $.cookie('Bam:UserId'));
            $("#UserName").html("用户名：" + $.cookie('Bam:UserName'));
            $("#GroupClass").html("用户权限：" + $.cookie("Bam:GroupClass"));
        });

	</script>
</head>
<body>
